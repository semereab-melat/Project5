@model Student

<h3 class="my-4">Delete Student</h3>

<div class="card rounded shadow p-3">
    <h4>Are you sure you want to delete @Model.Name from the list</h4>
    <form asp-action="Delete">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- we hide the id as its not user editable but needs to be in the -->
        <!-- form to ensure the student passed to the controller is complete -->    
        <input type="hidden" asp-for="Id" class="form-control"/>

        <!-- add form groups for each student attributed being edited -->
        <!-- you can copy the necessary groups from Create.cshtml     -->

         <!-- name -->
        <div class="mt-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" disabled class="form-control"/>
            
        </div>
    
        <!-- course -->
        <div class="mt-3">
             <label asp-for="Course" class="form-label"></label>
            <input asp-for="Course" disabled class="form-control"/>
           
        </div>

        <!--move Age and grade input groups in 2 columns in single row -->      
        <div class="row mt-3">
            <div class="col">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" disabled class="form-control"/>
           
            </div>

            <div class="col">
                <label asp-for="Grade" class="form-label"></label>
            <input asp-for="Grade" disabled class="form-control"/>
           
            </div>
        </div>

        <!-- email -->
        <div class="mt-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" disabled class="form-control"/>
          
        </div>

        <!-- add PhotoUrl input group - ensure input field type is url -->
        <div class="mt-3">
             <label asp-for="PhotoUrl" class="form-label"></label>
            <input type="url" asp-for="PhotoUrl" disabled class="form-control"/>
            
        </div>

     
       
        <!-- submit button and cancel link which navigates to Details action -->
        <div class="mt-3">
            <input type="submit" value="Delete" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-controller="Student" asp-action="Details" asp-route-Id="@Model.Id">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}